
{% extends "NasAppBundle::layout.html.twig" %}
{% block title %}
	Modifier un honoraire - {{ parent() }}
{% endblock %}

{% block NasApp_body %}
<div class="row">
	<div class="col-md-8 col-md-offset-3">
		<form method="post" {{ form_enctype(form) }} class="form-horizontal">
			
			<fieldset>

			<!-- Form Name -->
			<legend>Modifier un honoraire de la specialite : {{ specialite.specialite }} - <a href="{{ path('nasApp_detailSpecialite', {'idSpecialite': specialite.id}) }}" class="btn btn-info">Retour à la spécialité</a></legend>
			{{ form_errors(form) }}
			
			<!-- Text input-->

			<div class="form-group">
				<label for="username" class="col-sm-4 control-label">{{ form_label(form.type, "Type de l'honoraire : ") }} </label>
				<div class="col-sm-3">
					{{ form_widget(form.type,  { 'attr': {'class': 'form-control'}}) }}
				</div>
			</div>

			<!-- Text input-->
			<div class="form-group">
				<label for="username" class="col-sm-4 control-label">{{ form_label(form.pourcentageFacture, "Pourcentage facture : ") }} </label>
				<div class="col-sm-3">
					{{ form_widget(form.pourcentageFacture,  { 'attr': {'class': 'form-control'}}) }}
				</div>
			</div>					

			{{ form_rest(form) }}

		  <div class="form-group">
			<div class="col-sm-offset-4 col-sm-10">
			  <input type="submit" class="btn btn-success" value="Modifier"/>
			</div>
		  </div>  			
			</fieldset>		
				
				
		</form>
	</div>
</div>	

{% endblock %}










