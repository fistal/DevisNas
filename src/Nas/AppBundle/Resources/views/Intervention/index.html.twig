{% extends "NasAppBundle::layout.html.twig" %}
{% block title %}
	Accueil - {{ parent() }}
{% endblock %}
{% block titleAction %}<h2>Liste des interventions de la spécialité : {{ uneSpe.specialite }}</h2>{% endblock %}
{% block NasApp_body %}
	<table class="table table-striped">
		<thead>
          <tr>
            <th>Intervention</th>
            <th>GHS</th>
            <th>DMI</th>
            <th>Honoraires</th>
            <th>Dont praticien</th>
            <th>Total</th>
            <th>Modifier</th>
            <th>Supprimer</th>
          </tr>
        </thead>
		<tbody>
			{% for inter in liste_intervention %}
				<tr>
					<td>{{ inter.intervention }}</td>
					<td>{{ inter.ghs }}</td>
					<td>{{ inter.dmi }}</td>
					<td>{{ inter.honoraires }}</td>
					<td>{{ inter.dontSpecialiste }}</td>
					<td>{{ inter.total }}</td>
					<td><a class="btn btn-warning" href="{{ path('nasApp_modifierIntervention', {'id': inter.id}) }}">Modifier</a></td>
					<td><a class="btn btn-danger" href="{{ path('nasApp_supprimerIntervention', {'id': inter.id}) }}">Supprimer</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-success" href="{{ path('nasApp_ajouterIntervention') }}">Ajouter une intervention</a>
	
	
	

{% endblock %}