{% extends 'NasUserBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="row">
<div class="col-md-6 col-md-offset-3">
<fieldset>
	<legend><span class="icon-key"></span> Liste des utilisateurs : </legend>
    
	<table class="table table-hover" id="myTable">
	<thead>
        <tr>
          <th>E-mail</th>
          <th>utilisateur</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>	
		<tbody>
		{% for user in users  %}
		<tr>
			<td>
				<a href="#">{{ user.email }}</a>
			</td>			
			<td>
				<a href="#">{{ user.username }}</a>
			</td>			
			<td>
				<a href="#">{{ user.roles[0] }}</a>
			</td>
			<td>
				<a href="{{ path('fos_user_profile_edit') }}" class="btn btn-warning">Modifier</a>
			</td>
		</tr>
		{% endfor %}
		</tbody>
	</table>

   </fieldset> 
</div>
</div>
{% endblock fos_user_content %}
