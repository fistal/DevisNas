<div class="row">
<div class="col-md-6 col-md-offset-3">
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
<fieldset>
	<legend>Enregistrer un utilisateur</legend>
    
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">E-mail : </label>
		<div class="col-sm-4">
			{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
			<p class="help-block">{{ form_errors(form.email) }}</p>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Utilisateur : </label>
		<div class="col-sm-4">
			{{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
			<p class="help-block">{{ form_errors(form.username) }}</p>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Mot de passe : </label>
		<div class="col-sm-4">
			{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
			<p class="help-block">{{ form_errors(form.plainPassword.first) }}</p>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Confirmer mot de passe : </label>
		<div class="col-sm-4">
			{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
			<p class="help-block">{{ form_errors(form.plainPassword.second) }}</p>
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Type de compte : </label>
		<div class="col-sm-4">
		{% for role in form.roles %}
			{{ form_widget(role,  { 'attr': {'class': 'form-control'}}) }}{{ form_errors(role) }}
		{% endfor %}
		</div>
	</div>
	<div class="form-group">
		<label for="username" class="col-sm-4 control-label">Sp√©cialite : </label>
		<div class="col-sm-4">
			{{ form_widget(form.specialite,  { 'attr': {'class': 'form-control'}}) }}
		</div>
	</div> 
{{ form_rest(form) }}
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-10">
      <input type="submit" value="Valider" class="btn btn-default"/>
    </div>
  </div>  	

</fieldset> 
</form>
</div>
</div>
